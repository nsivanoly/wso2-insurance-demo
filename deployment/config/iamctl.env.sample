# iamctl Environment Configuration
# This file contains environment variables for iamctl operations
# Do not commit credentials to version control

# WSO2 Identity Server Configuration
IS_HOST=${IS_HOST:-https://localhost:9443}
IS_ENV_NAME=${IS_ENV_NAME:-insurance-is}
IS_TENANT_DOMAIN=${IS_TENANT_DOMAIN:-carbon.super}

# Authentication Credentials
IS_USERNAME=${IS_USERNAME:-admin}
IS_PASSWORD=${IS_PASSWORD:-admin}

# User Store Configuration
USER_STORE_NAME=${USER_STORE_NAME:-insurance}
USER_STORE_TYPE=${USER_STORE_TYPE:-database}
USER_STORE_CONNECTION_URL=${USER_STORE_CONNECTION_URL:-jdbc:mysql://mysql:3306/insurance}
USER_STORE_CONNECTION_NAME=${USER_STORE_CONNECTION_NAME:-root}
USER_STORE_CONNECTION_PASSWORD=${USER_STORE_CONNECTION_PASSWORD:-12345}
USER_STORE_DRIVER=${USER_STORE_DRIVER:-com.mysql.cj.jdbc.Driver}

# Groups to Create
IS_GROUPS=${IS_GROUPS:-Customer:Employee:admin}

# Roles Configuration
IS_ADMIN_ROLE=${IS_ADMIN_ROLE:-admin}
IS_CUSTOMER_ROLE=${IS_CUSTOMER_ROLE:-Customer}
IS_EMPLOYEE_ROLE=${IS_EMPLOYEE_ROLE:-Employee}

# Attribute Configuration
IS_CUSTOM_ATTRIBUTE=${IS_CUSTOM_ATTRIBUTE:-db_id}

# OIDC Scope Configuration
IS_OIDC_SCOPE=${IS_OIDC_SCOPE:-db_id}

# Application Configuration
IS_APP_NAME=${IS_APP_NAME:-insurance-spa}
IS_APP_TYPE=${IS_APP_TYPE:-single_page_application}
IS_APP_CALLBACK_URL=${IS_APP_CALLBACK_URL:-http://localhost:5173/}

# Logging and Debug
IS_LOG_LEVEL=${IS_LOG_LEVEL:-info}

# SSL/TLS Configuration
IS_SKIP_CERT_VALIDATION=${IS_SKIP_CERT_VALIDATION:-true}
IS_INSECURE=${IS_INSECURE:-true}
